@model IEnumerable<TallinnaRakenduslikKolledge_Leib.Models.Department>

@{
	ViewData["Title"] = "Osakonnad";
}
<h1>Osakonnad</h1>
<p>
	<a asp-action="Create">Loo uus osakond</a>
</p>
<table>
	<thead>
		<tr>
			<th>@Html.DisplayNameFor(model => model.Name)</th>
			<th>@Html.DisplayNameFor(model => model.Budget)</th>
			<th>@Html.DisplayNameFor(model => model.StartDate)</th>
			<th>@Html.DisplayNameFor(model => model.Administrator)</th>
			<th>@Html.DisplayNameFor(model => model.RowVersion)</th>
			<th>@Html.DisplayNameFor(model => model.CurrentRating)</th>
			<th>Tööriistad</th>
		</tr>
	</thead>
	<tbody>
		@foreach(var department in Model)
		{
			<tr>
				<td>@Html.DisplayFor(modelItem => department.Name)</td>
				<td>@Html.DisplayFor(modelItem => department.Budget)</td>
				<td>@Html.DisplayFor(modelItem => department.StartDate)</td>
				<td>@Html.DisplayFor(modelItem => department.Administrator.FullName)</td>
				<td>@Html.DisplayFor(modelItem => department.RowVersion)</td>
				<td>
					<a asp-action="Edit" asp-route-id="@department.DepartmentId" class="btn btn-outline-primary">Muuda</a>
					<a asp-action="Delete" asp-route-id="@department.DepartmentId" class="btn btn-outline-secondary">Vaata</a>
					@* Vaata Adminit *@
					<a asp-action="Details" asp-route-id="@department.DepartmentId" class="btn btn-danger">Kustuta</a>
				</td>
			</tr>
		}
	</tbody>
</table>